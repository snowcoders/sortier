  "configurations": [
    {
      "args": [
        "--runInBand",
        "--coverage",
        "false",
        "--findRelatedTests",
        "${relativeFile}"
      ],
      "console": "integratedTerminal",
      "cwd": "${workspaceRoot}",
      "internalConsoleOptions": "neverOpen",
      "name": "Debug Relative Jest Tests",
      "program": "${workspaceRoot}/node_modules/jest/bin/jest",
      "request": "launch",
      "sourceMaps": true,
      "type": "node"
    },
    {
      "args": [],
      "cwd": "${workspaceRoot}",
      "name": "Debug app",
      "outFiles": [],
      "preLaunchTask": "npm: build",
      "program": "${workspaceRoot}/bin/index",
      "request": "launch",
      "runtimeArgs": ["--nolazy"],
      "sourceMaps": true,
      "type": "node"
    }
  ],
  "version": "0.2.0"
}
